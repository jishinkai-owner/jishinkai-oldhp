---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import "github-markdown-css/github-markdown.css";
import "../../assets/markdown.scss";

export async function getStaticPaths() {
    const blogEntries = await getCollection("yama");
    return blogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<MainLayout
    title={entry.data.title ?? entry.slug}
    description={entry.data.description}
    type="山行記録"
    breadcrumbs={[
        {title: "山行記録", href: "/yama/"},
        ...entry.data.breadcrumbs.map((b) => ({title: b.title, href: "/yama"+b.href})),
    ]}
    datePublished={entry.data.datePublished}
    dateModified={entry.data.dateModified}
>
    <div class="markdown-body">
        <script is:inline async src="//embedr.flickr.com/assets/client-code.js" charset="utf-8"></script>
        <Content />
    </div>
</MainLayout>

<style lang="scss">
    .markdown-body {
        width: 100%;
        padding: 20px;
    }
</style>
