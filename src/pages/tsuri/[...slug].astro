---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
    const blogEntries = await getCollection("tsuri");
    return blogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<MainLayout
    title={entry.data.title}
    type="釣果記録"
    breadcrumbs={[
        {title: "釣果記録", href: "/tsuri/"},
        ...entry.data.breadcrumbs.map((b) => ({title: b.title, href: "/tsuri"+b.href})),
    ]}
>
    <div class="markdown-body">
        <script is:inline async src="//embedr.flickr.com/assets/client-code.js" charset="utf-8"></script>
        <Content />
    </div>
</MainLayout>
