generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Member {
  id        String   @id @default(uuid())
  nickname  String
  createdAt DateTime @default(now())
  major     String?
  profile   String?
  name      String?
  role      String?
  year      String
  src       String?
}

model ActivityRecord {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  year      Int
}

model MountainRecord {
  year         Int
  mountainname String
  teamname     String?
  createdAt    DateTime @default(now())
  month        Int?
  content      String?
  id           Int      @id @default(autoincrement())
}
